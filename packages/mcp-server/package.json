{
  "name": "@nodm/financier-mcp-server",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
    "nx": {
    "includedScripts": [],
    "targets": {
      "serve": {
        "command": "npx -y @modelcontextprotocol/inspector node ./dist/index.js",
        "dependsOn": ["build"],
        "continuous": true
      }
    }
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "@financier/source": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!**/*.tsbuildinfo"
  ],
  "bin": {
    "financier-mcp-server": "./dist/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "@nodm/financier-db": "workspace:*",
    "@nodm/financier-types": "workspace:*",
    "tslib": "^2.3.0",
    "zod": "^3.24.1"
  }
}
